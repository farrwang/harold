{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C++ build",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-stdlib=libc++",
        "-g",
        "${workspaceFolder}/src/index.cpp",
        "-o",
        "${workspaceFolder}/build/index.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
  ]
}